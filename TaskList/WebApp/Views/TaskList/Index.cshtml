@{
    ViewBag.Title = "Tasks";
}
<div id="vmTasks">
	<div class="row">
		<div class="col-md-9">
			<div class="row">
				<div class="col-md-12">
					<h3 class="row header smaller lighter blue">
						<span class="col-md-12">
							<span class=".glyphicon .glyphicon-book"></span>
							Tasks
						</span>
					</h3>
					<div data-bind="css: formFeedback.css, html: formFeedback.message, visible: formFeedback.visible"></div>
					<div class="alert alert-info" data-bind="visible: isEmpty()">
						<strong>No Tasks!</strong>&nbsp;You have no pending tasks. 
					</div>
					<div class="widget-box transparent">
						<div class="widget-body">
							<div class="widget-main padding-8">
								<div id="profile-feed-1" data-bind="foreach: items">
									<div class="well clearfix">
										<div>
											<strong data-bind="text: taskTypeName"></strong>
											<span data-bind="text: description"></span>
											<div class="time">
												<abbr data-bind="timeago: createDate"></abbr>
												<div class="btn-group pull-right">
													<button class="edit btn btn-default">
														Edit
													</button>
													<button class="delete btn btn-default">
														Delete
													</button>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="row">
				<div class="col-md-12">
					<h3 class="row header smaller lighter blue">
						<span class="col-md-12">
							<i class="icon-th-large"></i>
							Actions
						</span>
					</h3>
					<ul class="nav nav-pills nav-stacked">
						<li>
							<a href="#modalTask" data-toggle="modal" class="create">New Task</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	<!-- Task Modal -->
	<div id="modalTask" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
					<h3 id="myModalLabel">Task</h3>
				</div>
				<div class="modal-body">
					<form class="form-horizontal">
						<div class="control-group">
							<label class="control-label">
								Task Type
							</label>
							<div class="controls">
								<select class="form-control" data-bind="value: currentItem().taskType">
									<option value="1">Work</option>
									<option value="2">Scheduled Meeting</option>
									<option value="3">Social</option>
								</select>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label">
								Description
							</label>
							<div class="controls">
								<textarea class="form-control" rows="8" data-bind="value: currentItem().description"></textarea>
							</div>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<div data-bind="css: formFeedback.css, html: formFeedback.message, visible: formFeedback.visible"></div>
					<button class="btn btn-primary submit">Submit</button>
				</div>
			</div>
		</div>
	</div>
	<!-- End Task Modal -->
</div>

@section Scripts{
<script src="~/Scripts/knockout/taskList.js"></script>
}